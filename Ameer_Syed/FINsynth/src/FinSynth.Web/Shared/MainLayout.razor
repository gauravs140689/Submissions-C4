@inherits LayoutComponentBase

<RadzenLayout>
    <RadzenHeader>
        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="1rem" class="rz-p-3">
            <RadzenIcon Icon="account_balance" Style="font-size: 2rem; color: var(--rz-primary);" />
            <img src="~/images/finsynth logo.png" />
            <RadzenText TextStyle="TextStyle.H4" TagName="TagName.H1" class="rz-m-0">FinSynth</RadzenText>
            <RadzenText TextStyle="TextStyle.Subtitle1" class="rz-ml-2 rz-text-secondary-color">Multi-Agent Financial Advisor</RadzenText>
        </RadzenStack>
    </RadzenHeader>
    <RadzenSidebar Style="width: 250px;">
        <NavMenu />
    </RadzenSidebar>
    <RadzenBody>
        <div class="rz-p-4">
            @Body
        </div>
    </RadzenBody>
</RadzenLayout>
